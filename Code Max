# création fenêtre tk()

fenetre=Tk()
fenetre.geometry("600x600")
fenetre.resizable(0,0) # Fenêtre non redimmensionnable


Mot_a = StringVar()

LabelResultat = Label(fenetre, fg ='black', bg ='white')
LabelResultat.pack(padx = 5, pady = 5,)

bouton_alea=Button(fenetre, text="Les lettres ont été générées automatiquement",font=("Helvetica", 20), command=mot_aléatoire(liste_voyelles,liste_consonnes))      # bouton voyelle
bouton_alea.pack(side= TOP)


#var_texte = StringVar()
#ligne_texte = Entry(fenetre, textvariable = var_texte, width=30)
#ligne_texte.pack()

L1 = Label(fenetre, text = "Entrez le mot")
Entry1=Entry(fenetre)
button1=Button(fenetre, text = "Cliquez pour saisir", command=saisie_mot)
button2=Button(fenetre, text = "Cliquez pour vérifier",command=lambda : verif_mot_saisi(mot_saisi_list,mot_aléa))
L1.pack()
Entry1.pack()
button1.pack()
button2.pack()

BoutonQuitter = Button(fenetre, text ='Quitter', command =fenetre.destroy)
BoutonQuitter.pack(side = BOTTOM, padx = 5, pady = 5)

#tirage=Label(fenetre,text="_ _ _ _ _ _ _ _", font=("Helvetica", 20))                        # Zone d'affichage des lettres tirées      
#tirage.pack()
fenetre.mainloop()



