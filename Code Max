​
def voyelle():
    global lettres_tirees,nbre_lettres
    if nbre_lettres <=8:                # pas plus de 8 lettres tirées
        voyelle=choice(liste_voyelles)   # choix au hasard d'une des voyelles de liste_voyelle 
        lettres_tirees=lettres_tirees+voyelle+" "       # on ajoute la voyelle à la liste des lettres tirées
        tirage.config(text=lettres_tirees)      # On modifie l'affichage du Label tirage
        nbre_lettres+=1                 # On ajoute 1 au nbre de lettres tirées
    
def consonne():                         # idem que la fonction voyelle() mais avec les consonne
global lettres_tirees,nbre_lettres
    if nbre_lettres <=8:
        consonne=choice(liste_consonnes)
        lettres_tirees=lettres_tirees+consonne+" "
        tirage.config(text=lettres_tirees)
        nbre_lettres+=1
