def verif_mot_saisi(mot_saisi_list,mot_aléa):
        L3 = Label(fenetre)
        L4 = Label(fenetre)
        identique=0
        non_identique=0
        mot_saisi=str(mot_saisi_list)
        for i in range (len(mot_saisi_list)):
                for j in range (0,9):
                        if mot_saisi_list[i]==mot_aléa[j]:
                                identique=identique+1
        if identique>=len(mot_saisi_list):
                print("\nBravo vous avez réussi à former un mot avec les lettres données")
                L3["text"] = "\nBravo vous avez réussi à former un mot avec les lettres données"
        else :
                print("\nTu comprends pas quoi dans 'utiliser les lettres tirées aléatoirement' ?")
                L3["text"] = "Le mot saisi ne correspond pas aux lettres tirées aléatoirement"

        file = open('dico.txt')
        content = file.read()
        #print(file)
        file.close()
        StrMot_saisi = "".join(mot_saisi_list)
        if StrMot_saisi in content:
                print("Le mot est valide, il existe")
                L4["text"] = "Le mot est valide, il existe"
        else:
                print("Le mot n'est pas valide de toute façon")
                L4["text"] = "Le mot n'est pas valide"
        L3.pack()
        L4.pack()

