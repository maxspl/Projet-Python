dico=[]                             #
liste_mots=open("dico.txt","r")    
mots=liste_mots.readline()          
while mots != "":                  
    mots=mots.replace("\n","")      
    dico.append(mots)               
    mots=liste_mots.readline()      #
liste_mots.close()
