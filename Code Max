​
# initialisation     
lettres_tirees=""    #lettres tirées     
nbre_lettres=0       # nombre de lettres tirées
​
liste_consonnes=["B","C","D","F","G","H","J","K","L","M","N","P","Q","R","S","T","V","W","X","Z"]
liste_voyelles=["A","E","I","O","U","Y"]
​
# création fenêtre tk()
fenetre=Tk()
fenetre.geometry("600x600")
fenetre.resizable(0,0) # Fenêtre non redimmensionnable
​
​
bouton_voyelle=Button(fenetre, text="voyelle",font=("Helvetica", 20), command=voyelle)      # bouton voyelle
bouton_voyelle.pack()
​
bouton_consonne=Button(fenetre, text="consonne",font=("Helvetica", 20), command=consonne)  # bouton consonne
bouton_consonne.pack()
​
tirage=Label(fenetre,text="_ _ _ _ _ _ _ _", font=("Helvetica", 20))                        # Zone d'affichage des lettres tirées      
tirage.pack()
​
​
fenetre.mainloop()
